<div>
  <% comments.each do |comment| %>
    <%= link_to(anime_discussion_path(comment.discussion.anime, comment.discussion, anchor: comment.id), class: "grid grid-cols-7 gap-4 border-b border-primary p-2 hover:bg-primary-content") do %>
      <div class="col-span-7">
        <div class="flex w-full">
          <p class="font-bold my-auto text-primary-focus"><%= comment.content %></p>
          <div class="flex flex-col gap-2 ml-auto text-xs">
            <p class="ml-auto"><%= l(comment.created_at, format: :long) %></p>
            <p class="ml-auto"><%= comment.discussion.title %>（<%= comment.discussion.anime.title %>）</p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= paginate(comments) %>
</div>
