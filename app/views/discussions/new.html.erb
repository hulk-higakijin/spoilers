<div>
  <h1 class="headline">New discussion / <%= @anime.title %></h1>
  <%= form_with(model: [@anime, @discussion]) do |f| %>
    <div class="flex flex-col gap-4 p-4">
      <%= f.label(:title) %>
      <%= f.text_field(:title, class: "input input-bordered w-full") %>

      <%= f.submit("start", class: "btn btn-primary") %>
    </div>
  <% end %>
</div>
